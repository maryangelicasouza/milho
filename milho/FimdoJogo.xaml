<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="milho.FimdoJogo"
             BackgroundColor="#004AAD"
             Shell.NavBarIsVisible="False"
             Padding="20,20,20,20">

    <Grid RowSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Image Source="milho.jpeg"
               Grid.Row="0"
               Grid.RowSpan="2"/>
        <Button x:Name="Voltarjogar"
                Clicked="OnButtonvoltarButtonClicked"
                Text="Voltar a Jogar"
                BackgroundColor="#4287f5"
                FontSize="12"
                Grid.Row="1"/>
    </Grid>
</ContentPage>
